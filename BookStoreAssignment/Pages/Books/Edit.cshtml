@page
@model BookStoreAssignment.Pages.Books.EditModel

@{
    ViewData["Title"] = "Edit";

}



  
     <div class="dialog-box">
            <h3>Edit Book</h3>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Book.ID" />
            <div class="form-group">
                <label asp-for="Book.Title" class="control-label"></label>
                <input asp-for="Book.Title" class="form-control" />
                <span asp-validation-for="Book.Title" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="Book.Category" class="control-label"></label>
                <input asp-for="Book.Category" class="form-control  />
                <span asp-validation-for="Book.Category" class="text-danger"></span>
            </div>
            <div class="form-group mt-5">
                <input type="submit" value="Save" class="btn btn-primary me-4" />
                    <button class="btn btn-primary" style="color:#fff">
                        <a style="color:#fff;text-decoration:none" asp-page="./Index">Cancel</a>
                    </button>
            </div>
        </form>
    </div>



<style>
    .dialog-box {
        position: absolute; 
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 500px;
        height: 300px;
        background-color: #fff;
        border: 1px solid #000;
        box-shadow: 0 0 10px #000;
        padding: 20px;
    }
</style>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
